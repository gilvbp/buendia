cd /usr/share/buendia/packages

if [ -n "$(ls *.apk)" ]; then
    message='Versions available for download:'
else
    message='No versions of the client app are available for donwload.'
fi

cat <<EOF
Content-Type: text/html

<link rel="stylesheet" href="style.css">
<h1>Client app</h1>

<div>
$message
</div>

<div>
EOF

for file in $(ls -t *.apk); do
    cat <<EOF
<p><a href="/packages/$file">$file</a>
EOF
done

cat <<EOF
</div>

<div><a href="/">Back to dashboard</a></div>
EOF
