# Remove all downloaded and generated files.

SERVER_ID=buendia
SERVER_DIR=$HOME/openmrs/$SERVER_ID

rm -rf $SERVER_DIR

# go to the root of the Buendia repository
cd $(dirname $0)/..

rm -rf openmrs/openmrs-project/server/openmrs
rm -rf openmrs/*/*/target
rm -rf openmrs/*/target
rm -rf openmrs/target

# Clear the cache of downloaded files
# rm -rf /tmp/buendia-fetched
