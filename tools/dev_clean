set -e
cd $(dirname $0)/..  # go to the root of the Buendia git repo
SERVER_ID=buendia
SERVER_DIR=$HOME/openmrs/$SERVER_ID
BIN_DIR=/usr/bin
BUENDIA_DIR=/usr/share/buendia

if [[ $1 = -h ]]; then
    echo "Usage: $0"
    echo
    echo 'Removes all files added or generated by Buendia tool scripts.'
    exit 1
fi

# Remove scripts
rm -f $BIN_DIR/buendia-* || true
rm -rf $BUENDIA_DIR/* || true
rm -rf $BUENDIA_DIR || true

# Remove OpenMRS server
rm -rf $SERVER_DIR || true

# Remove build outputs
rm -rf openmrs/openmrs-project/server/openmrs || true
rm -rf openmrs/*/*/target || true
rm -rf openmrs/*/target || true
rm -rf openmrs/target || true

# Clear the cache of downloaded files
rm -rf /tmp/buendia-fetched || true
